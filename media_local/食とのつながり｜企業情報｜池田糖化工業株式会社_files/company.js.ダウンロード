// JavaScript Document

//relation tab
$(function(){ 
    $('#company_relation-tab > li').on('click',function(){
        var index = $('#company_relation-tab > li').index(this);
    $('#company_relation-tab > li').removeClass('active'); //②
    $(this).addClass('active'); //③
    $('#company_relation-tabBox > div').removeClass('hide'); //④
    $('#company_relation-tabBox > div').eq(index).addClass('hide'); //⑤
    }); 
});

//colorbox
$(function() {
	$(".inline").colorbox({
		inline:true,
		maxWidth:"90%",
		maxHeight:"90%",
		opacity: 0.7,
		scrolling: false
	});
});